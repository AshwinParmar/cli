{
    "name": "acquia/ads-cli-php",
    "description": "ADS CLI written in PHP.",
    "type": "library",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Matthew Grasmick",
            "email": "matt.grasmick@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "ext-json": "*",
        "doctrine/cache": "^1.10",
        "drupol/phposinfo": "^1.6",
        "kevinrob/guzzle-cache-middleware": "^3.3",
        "league/oauth2-client": "^2.4",
        "psr/log": "^1.1",
        "react/event-loop": "^1.1",
        "symfony/cache": "^5.0",
        "symfony/console": "^5.0",
        "symfony/filesystem": "^5.1@dev",
        "symfony/finder": "^5.0",
        "symfony/process": "^5.0",
        "symfony/yaml": "^5.1@dev",
        "typhonius/acquia-php-sdk-v2": "dev-master",
        "ext-posix": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Acquia\\Ads\\": "src/"
        }
    },
    "bin": [
        "bin/ads"
    ],
    "config": {
        "process-timeout": 3600,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "update-cloud-api-spec": [
            "git clone git@github.com:acquia/cx-api-spec.git",
            "cd cx-api-spec",
            "make spec",
            "cp dist/spec/acquia-spec.yaml ../assets/",
            "cd ..",
            "rm -rf cx-api-spec"
        ],
        "cs": "phpcs -n --standard=PSR2 src tests bin --exclude=Generic.Files.LineLength",
        "cbf": "phpcbf -n --standard=PSR2 src tests bin --exclude=Generic.Files.LineLength",
        "unit": "phpunit",
        "lint": [
            "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
            "find tests -name '*.php' -print0 | xargs -0 -n1 php -l"
        ],
        "test": [
            "@lint",
            "@cs"
        ]
    }
}
